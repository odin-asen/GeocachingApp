<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <!-- Picture and Name -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#FFFFBB33" >
        <ImageView
                android:id="@+id/cache_type"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:scaleType="fitCenter" />
        <TextView
            android:id="@+id/cache_code"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:textColor="#FFFFFFFF"
            android:textSize="24dp"/>
    </LinearLayout>

    <!-- Cache Size -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="5dp">
        <TextView
                android:text="@string/cache_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:fontFamily="bold"
                android:textSize="20dp" />
        <TextView
                android:id="@+id/cache_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="italic"
                android:textSize="20dp" />
    </LinearLayout>

    <!-- Cache Difficulty/Terrain -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" >
        <TextView
                android:text="@string/cache_difficulty_terrain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:fontFamily="bold"
                android:textSize="16dp" />
        <TextView
                android:id="@+id/cache_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp" />
        <TextView
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp" />
        <TextView
                android:id="@+id/cache_terrain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>